<div class="page-header">
  <h1>
    States
    <a href="/states/new" class="btn btn-lg btn-success">New State</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @states.each do |state| %>
      <tr>
        <td><%= state.name %></td>
        <td>
          <a href="/states/<%= state.id %>" class="btn btn-primary">Show</a>
          <a href="/states/<%= state.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_state/<%= state.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="page-header">
  <h1>
    States
    <a href="/states/new" class="btn btn-lg btn-success">New State</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>State:</th>
        <th>Steve:</th>
        <th>May:</th>
        <th>      </th>
      </tr>

      <% @states.each do |state| %>
      <tr>
        <td><%= state.name %></td>
        <td>
          <% if @steve.states.include? state %>
          <i class="fa fa-lg fa-check-square-o green" aria-hidden="true"></i>
          <% else %>
          <i class="fa fa-lg fa-square-o" aria-hidden="true"></i>
          <% end %>
        </td>
        <td>
          <% if @may.states.include? state  %>
          <i class="fa fa-lg fa-check-square-o green" aria-hidden="true"></i>
          <% else %>
          <i class="fa fa-lg fa-square-o" aria-hidden="true"></i>
          <% end %>
        </td>
        <td>
          <a href="/states/<%= state.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus" aria-hidden="true"></i>
          </a>
          <a href="/states/<%= state.id %>/edit" class="btn btn-warning">
            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
          </a>
          <a href="/delete_state/<%= state.id %>" class="btn btn-danger" rel="nofollow">
            <i class="fa fa-trash-o" aria-hidden="true"></i>
          </a>
        </td>

      </tr>
      <% end %>
    </table>
  </div>
</div>

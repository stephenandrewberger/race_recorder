<div class="page-header">
  <h3><%= @state.name %> Half Marathon</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt> Race Name:</dt>
      <% @state.races.each do |race| %>
      <dd><%= state.race.name %></dd>
      <% end %>

    </dl>

    <div class="btn-group btn-group-justified">

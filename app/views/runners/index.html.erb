<div class="page-header">
  <h1>
    Runners
    <a href="/runners/new" class="btn btn-lg btn-success">New Runner</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @runners.each do |runner| %>
      <tr>
        <td><%= runner.name %></td>
        <td>
          <a href="/runners/<%= runner.id %>" class="btn btn-primary">Show</a>
          <a href="/runners/<%= runner.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_runner/<%= runner.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

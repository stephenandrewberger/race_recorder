<div class="page-header">
  <h1>
    Races
    <a href="/races/new" class="btn btn-lg btn-success">New Race</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Race</th>
        <th>Date</th>
        <th>City</th>
        <th>State</th>
        <th>Actions</th>
      </tr>

      <% @races.each do |race| %>
      <tr>
        <td><%= race.name %></td>
        <td><%= race.date.strftime(" %m/%d/%Y") %></td>
        <td><%= race.city %></td>
        <td><%= race.state.name if race.state %></td>

        <td>
          <a href="/races/<%= race.id %>" class="btn btn-primary">Show</a>
          <a href="/races/<%= race.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_race/<%= race.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

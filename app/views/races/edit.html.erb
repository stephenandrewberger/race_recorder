<!-- Validation failure messages -->
<% if @race.errors.any? %>
<% @race.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<div class="page-header">
  <h3>Edit <%= @race.name %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_race/<%= @race.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for race name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Race
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @race.name %>">
      </div>

      <!-- Label and input for date -->
      <div class="form-group">
        <label for="date" class="control-label">
          Date
        </label>

        <input type="text" id="date" name="date" placeholder="Date" class="form-control" value="<%= @race.date %>">
      </div>

      <!-- Label and input for city -->
      <div class="form-group">
        <label for="city" class="control-label">
          City
        </label>

        <input type="text" id="city" name="city" placeholder="City" class="form-control" value="<%= @race.city %>">
      </div>

      <!-- Label and input for state -->
      <div class="form-group">
        <label for="state" class="control-label">
          State
        </label>

        <%= select_tag(:state_id, options_from_collection_for_select(State.all, :id, :name, @race.state_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Race
      </button>
      or
      <a href="/races/<%= @race.id %>">Cancel</a>
    </form>
  </div>
</div>

<!-- Validation failure messages -->
<% if @race_result.errors.any? %>
<% @race_result.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<div class="page-header">
  <h3>Edit <%= @race_result.race.name %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_race_result/<%= @race_result.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for runner -->
      <div class="form-group">
        <label for="runner" class="control-label">
          Runner
        </label>

        <%= select_tag(:runner_id, options_from_collection_for_select(Runner.all, :id, :name, @race_result.runner_id), :class => "form-control") %>
      </div>

      <!-- Label and input for race -->
      <div class="form-group">
        <label for="race" class="control-label">
          Race
        </label>

        <input type="text" id="race" name="race" placeholder="Race" class="form-control" value="<%= @race_result.race.name %>">
      </div>

      <!-- Label and input for date -->
      <div class="form-group">
        <label for="date" class="control-label">
          Date
        </label>

        <input type="text" id="date" name="date" placeholder="Date" class="form-control" value="<%= (@race_result.race.date).strftime(" %m/%d/%Y") %>">
      </div>

      <!-- Label and input for city -->
      <div class="form-group">
        <label for="city" class="control-label">
          City
        </label>

        <input type="text" id="city" name="city" placeholder="City" class="form-control" value="<%= @race_result.race.city %>">
      </div>

      <!-- Label and input for state -->
      <div class="form-group">
        <label for="state" class="control-label">
          State
        </label>

        <input type="text" id="state" name="state" placeholder="State" class="form-control" value="<%= @race_result.race.state.name %>">
      </div>

      <!-- Label and input for summary -->
      <div class="form-group">
        <label for="summary" class="control-label">
          Summary
        </label>

        <input type="text" id="summary" name="summary" placeholder="Summary" class="form-control" value="<%=truncate(@race_result.summary) %>">
      </div>

      <!-- Label and input for pr -->
      <div class="form-group">
        <label for="pr" class="control-label">
          Pr
        </label>

        <input type="text" id="pr" name="pr" placeholder="Pr" class="form-control" value="<%= @race_result.pr %>">
      </div>

      <!-- Label and input for time -->
      <div class="form-group">
        <label for="time" class="control-label">
          Time (seconds)
        </label>

        <input type="text" id="time" name="time" placeholder="Time" class="form-control" value="<%= @race_result.time %>">
      </div>

      <!-- Label and input for race id -->
      <div class="form-group">
        <label for="race_id" class="control-label">
          Race Id
        </label>

        <input type="text" id="race_id" name="race_id" placeholder="Race_id" class="form-control" value="<%= @race_result.race_id %>">
      </div>

      <button class="btn btn-warning">
        Update Race Result
      </button>
      or
      <a href="/race_results/<%= @race_result.id %>">Cancel</a>
    </form>
  </div>
</div>

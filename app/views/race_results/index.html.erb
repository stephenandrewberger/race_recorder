<div class="page-header">
  <h1>
    Race Results
    <a href="/race_results/new" class="btn btn-lg btn-success">New Race result</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Runner</th>
        <th>Race</th>
        <th>Date</th>
        <th>City</th>
        <th>State</th>
        <th>Summary</th>
        <th>Pr</th>
        <th>Time</th>
        <th>Actions</th>
      </tr>


      <% @race_results.each do |race_result| %>
      <tr>
        <td><%= race_result.runner.try(:name) %></td>
        <td><%= truncate(race_result.race.try(:name)) %></td>
        <td><%= (race_result.race.date).strftime(" %m/%d/%Y") if race_result.race %></td>
        <td><%= race_result.race.city if race_result.race %></td>
        <td><%= race_result.race.state.name if race_result.race %></td>
        <td><%= truncate(race_result.summary)  %></td>
        <td><%= race_result.pr %></td>
        <td><%= Time.at(race_result.time).utc.strftime("%H:%M:%S") %></td>
        <td>
          <a href="/race_results/<%= race_result.id %>" class="btn btn-primary">Show</a>
          <a href="/race_results/<%= race_result.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_race_result/<%= race_result.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="page-header">
  <h3>Race Result: <%= @race_result.race.name %> </h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Runner</dt>
      <dd><%= @race_result.runner.name %></dd>

      <dt>Race</dt>
      <dd><%= @race_result.race.name %></dd>

      <dt>Date</dt>
      <dd><%= @race_result.race.date.strftime(" %m/%d/%Y") %></dd>

      <dt>City</dt>
      <dd><%= @race_result.race.city %></dd>

      <dt>State</dt>
      <dd><%= @race_result.race.state.name %></dd>

      <dt>Summary</dt>
      <dd><%= @race_result.summary %></dd>

      <dt>Pr</dt>
      <dd><%= @race_result.pr %></dd>

      <dt>Time</dt>
      <dd><%= Time.at(@race_result.time).utc.strftime("%H:%M:%S") %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/race_results" class="btn btn-primary">
        Back
      </a>
      <a href="/race_results/<%= @race_result.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_race_result/<%= @race_result.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
